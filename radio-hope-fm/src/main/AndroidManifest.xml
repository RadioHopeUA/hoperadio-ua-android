<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
    package="ua.hope.radio.hopefm">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".HopeFMApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:screenOrientation="portrait"
            android:name=".activity.HopeFMMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="ua.hope.radio.core.player.AudioService"
                 android:exported="false"
                 tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>
        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7f33adb3f6b43391ea6ca019c008c90dd68faf58"
            />
    </application>

</manifest>
